@model Movie

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="/img/@Model.imageUrl" class="card-img-top" alt="@Model.title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.title</h5>
                <div>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.movieId" class="btn btn-primary">Film Detayı</a>
                    <a asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.movieId" class="btn btn-warning">Film Düzenle</a>
                    <form asp-controller="Movies" asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="movieId" value="@Model.movieId" />
                        <input type="hidden" name="title" value="@Model.title" />
                        <button type="submit" class="btn btn-danger">Filmi Sil</button>
                    </form>

                </div>
                
            </div>
        </div>
    </div>
</div>

    
    
    
    
</div>
